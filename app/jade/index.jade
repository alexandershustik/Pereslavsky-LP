	link(rel='stylesheet', href='css/main.css')
body
	section.lead
		.container.header
			a(href="#").logo
				img(src="img/logo.png", alt="")
			h1 Крупнейший производитель сыров в России
			h2 основан в 2010 году
	section.adv
		.container
			.row.adv-icons
				.col-sm
					.img-wrap
						img(src="img/adv-icon1.png", alt="")
					p Более 10 видов сыров 
						br
						| по ГОСТу
				.col-sm
					.img-wrap
						img(src="img/adv-icon2.png", alt="")
					p Cобственная лаборатория
						br
						|контроля качества
				.col-sm
					.img-wrap
						img(src="img/adv-icon3.png", alt="")
					p 700 тонн продукции 
						br
						|в месяц
				.col-sm
					.img-wrap
						img(src="img/adv-icon4.png", alt="")
					p Оборудование завода 
						br
						|поставлено из Италии
			.row.pics
				.col-sm
					img(src="img/adv-photo1.png", alt="")
				.col-sm
					img(src="img/adv-photo2.png", alt="")
				.col-sm
					img(src="img/adv-photo3.png", alt="")
				.col-sm
					img(src="img/adv-photo4.png", alt="")
			.row.desc
				.col
					p.text-center.mited-text Развиваемся и ищем новые направления бизнеса, отвечаем за 
						br
						| качество своей продукции, ценим традиции и открыты  
						br
						| для нового, предлогая лучшие условия для сотрудничества.
	section.slider
		h3.sectionHeader Наши сыры
		.container
			.slick-slider
				.slick-item
					img(src="img/slider-photo.png", alt="")
					p.slider-text Сыр «Маасдам»
						span 50%, 4,5 кг
				.slick-item
					img(src="img/slider-photo.png", alt="")
					p.slider-text Сыр «Маасдам»
						span 50%, 4,5 кг
				.slick-item
					img(src="img/slider-photo.png", alt="")
					p.slider-text Сыр «Маасдам»
						span 50%, 4,5 кг
				.slick-item
					img(src="img/slider-photo.png", alt="")
					p.slider-text Сыр «Маасдам»
						span 50%, 4,5 кг
	section.promo
		h3.sectionHeader Продукция для СТМ
		.container
			.row.desc
				.col-12
					p.text-center.mited-text «Переславский сыродельный завод» предлагает весовую продукцию собственного изготовления и перефасовку молочной продукции под торговой маркой заказчика (СТМ).
					p.text-center.mited-text.mt-3 Весовая продукция упаковывается
						br
						|в короба или пластиковые вёдра
					p.text-center.mited-text.mt-3
						img(src="img/stm-icon-bucket.png", alt="").icon
						img(src="img/stm-icon-box.png", alt="").icon
	section.products
		.container
			.row
				.col-sm.text-center
					img(src="img/photo-oil.png", alt="")
					p.products-txt Масло слиивочное
						span фольга, пергамент, флоупак
							br
							|180 г, 200 г
				.col-sm.text-center
					img(src="img/photo-curd.png", alt="")
					p.products-txt Творог
						span фольга, пергамент, флоупак
							br
							|180 г, 200 г
				.col-sm.text-center
					img(src="img/photo-spread.png", alt="")
					p.products-txt Спред
						span фольга, пергамент, флоупак
							br
							|180 г, 200 г
	section.news.text-center
		h3.sectionHeaderNews СМИ о нас
		.container
			.row
				.col-sm.text-center
					img(src="img/news-play-icon.png", alt="")
					p.news-txt Под Калининградом начинают 
						br
						|выпуск сыров по-настоящему
						br
						|российского производства
				.col-sm.text-center
					img(src="img/news-doc-icon.png", alt="")
					p.news-txt В бизнесе навыки надо развивать,
						br
						|как в футболе, 
						br
						|с детства
				.col-sm.text-center
					img(src="img/news-doc-icon.png", alt="")
					p.news-txt От моцареллы до гауды:
						br
						|Переславский завод начал
						br
						|выпуск сыра из местного сырья
	footer
		.container
			.row
				.col-sm
					img(src="img/footer-map.png", alt="").footerMap
				.col-sm.text-center.text-md-left
					h3.footer-header ООО «Переславский сыродельный завод»
					p.footer-txt 238952, Россия, Калининградская обл.,
						br
						|Зеленоградский р-н, п. Переславское, стр. 17
					p.footer-txt
						strong тел. 
						a(href="tel:+74012343-434") +7 (4012) 343-434
					p.footer-txt
						strong e-mail 
						a(href="mailto:info@pereslavsky.ru") info@pereslavsky.ru
					p.footer-links
						a(href="#").footer-link.fb-footer-link
						a(href="#").footer-link.inst-footer-link
