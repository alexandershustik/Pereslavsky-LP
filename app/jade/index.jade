html(lang="en")
head
	meta(charset="UTF-8")
	meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
	title Document
	link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=IBM+Plex+Sans:400,600&amp;subset=cyrillic')
